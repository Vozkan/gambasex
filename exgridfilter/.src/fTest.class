End

'' ejemplo de como se obtiene la fila completa en el grid extendido
Public Sub exgridfilter1_DblClick()
    
    Dim fila As Collection
    Dim celdas, valores As String = ""
    
    fila = exgridfilter1.Value
    For Each celdas In fila
        valores = valores & celdas
    Next
    Message("Valoes escogido de la fila: " & valores)
    
End

