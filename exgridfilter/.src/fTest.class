Public Sub Form_Open()
    
    Dim titulos As Variant[]
    Dim filas As New Variant[]
    
    ' elformato de la fuente source si es matrix, es primera linea titulos, resto filas
    titulos = ["tcel1", "tcel2", "teee"]
    filas.Add(titulos, 0)
    filas.Add(["cel1", "cel2", "teee"], 1)
    filas.Add(["cel3", "cel4", "teee"], 2)
    
    ' titulos se pueden sobreescribir por defecto son detectados de la fuente source
    titulos = ["colum1", "colum2", "teee"]          ' para eso hay que ponerlos primero de las fuentes
    exgridfilter1.titles = titulos          ' entonces coloco los titulos, despues desabilitarlos
    exgridfilter1.source = filas            ' entonces a√±ade todo incluso la primera fila
    exgridfilter1.menuDefault = True        ' hay un menu definodo, se muestra si no se define uno
    
